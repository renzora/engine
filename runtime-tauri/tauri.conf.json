{
  "productName": "Renzora Runtime",
  "version": "1.0.0",
  "identifier": "com.renzora.runtime",
  "build": {
    "beforeBuildCommand": "bunx rspack build --mode production --config runtime.rspack.config.js",
    "beforeDevCommand": "bunx rspack serve --config runtime.rspack.config.js",
    "frontendDist": "../dist-runtime",
    "devUrl": "http://localhost:3002"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Renzora Runtime",
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "maximized": false,
        "width": 1280,
        "height": 720,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "runtime-capability",
          "description": "Capability for runtime window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:app:default",
            "core:window:default",
            "core:event:default",
            "core:resources:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [
      "../exported-projects/*"
    ]
  }
}